<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/car_source" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:id="@+id/tv_zhong_xin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中信直通车(宁波)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_corner_bg"
                    android:text="CITIC认证"
                    android:layout_toRightOf="@id/tv_zhong_xin_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天道酬勤 诚信天下"
                android:textColor="#636468"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司：宁波有车有房平行进口车服务商\n地址：浙江省宁波市海曙区解放南路241号\n微信：stone_jime"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="25dp"
                android:textColor="#969C9C"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="25dp"/>

            <View
                style="@style/View_Divider"
                android:layout_height="14dp" />

            <com.zx.car.view.FavoriteCarShopDetailListView
                android:id="@+id/lv_favorite_car_shop_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/car_register_back_pressed"
                android:dividerHeight="1dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>