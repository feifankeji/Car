<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/iv_data_edit_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrow_green_l"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_normal"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="资料编辑"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="头像"
            style="@style/Data_Edit_TV_Style_title"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:clickable="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/search" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_normal"
        android:clickable="true">
        <TextView
            android:text="昵称"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="JACK"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="姓名"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="中信直通车"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="登录账号"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="1528558956"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="业务电话"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="1528558956"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="微信号"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="未填写"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="地址"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="请选择"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>

    <View
        style="@style/View_Divider"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/selector_normal">
        <TextView
            android:text="个人简介"
            style="@style/Data_Edit_TV_Style_title"
            />
        <TextView
            android:text="未填写"
            style="@style/Data_Edit_TV_Style_content" />
    </FrameLayout>
</LinearLayout>